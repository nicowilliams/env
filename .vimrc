set background=dark
" set modelines=0
set encoding=utf-8
set nocompatible
set syntax=enable
syntax on
set ai
set smarttab
set shiftwidth=4
set softtabstop=4
set tabstop=8
set showmode
set tw=72
set hlsearch
filetype plugin on
filetype indent on

set expandtab
set cinoptions=p0,t0,+4,(0,u4,U1,:0
set formatoptions=croq
set comments=sr:/*,mb:*,ex:*/,://
