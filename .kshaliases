	schmod () {
		[[ $# -ge 3 ]] || {
			print "Usage: schmod <dir perms> <file perms> <directory> ..."
			return 1
		}
		typeset dperms fperms dir status
		dperms="$1"
		fperms="$2"
		shift 2
		status=0
		for dir in "$@"
		do
			find "$dir" -type d -print|xargs chmod "$dperms"
			status=$(($status+$?))
			find "$dir" -type f -print|xargs chmod "$fperms"
			status=$(($status+$?))
		done
		return $status
	}

	procenv ()
	{
		typeset OIFS in out var val
		in="$1"
		out="$2"
		shift 2
		OIFS="$IFS"
		IFS="="
		while read line
		do
			IFS="="
			set -- $line
			var=$1
			shift 1
			val="$*"
			IFS="$OIFS"
			print -- "${var}=\"${val}\""
			IFS="="
			print "export $var"
		done < $in > $out
	}

