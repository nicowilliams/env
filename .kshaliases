hex2ascii () {
	typeset h s s1
	typeset -i c
	for i in "$@"
	do
	    s=$1
	    shift
	    c=8#0
	    while [[ ${#s} -gt 1 ]]
	    do
		    s1=${s#??}
		    h=${s%$s1}
		    s=$s1
		    c=$((16#$h))
		    print -n "\0${c#8?}"
	    done
	    print -n " "
	done
	print
}
